<Window x:Class="PostmanClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostmanClone"
        mc:Ignorable="d"
        Title="PostmanClone" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <ComboBox  Width="50" Height="25" Margin="2">
                <ComboBoxItem>GET</ComboBoxItem>
                <ComboBoxItem>POST</ComboBoxItem>
                <ComboBoxItem>PUT</ComboBoxItem>
            </ComboBox>
            <TextBox Height="25" Width="100" Margin="2"></TextBox>
            <Button Height="25" Margin="2" Padding="5 3 5 3">Send</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock>Response: </TextBlock>
            <TextBox IsReadOnly="True" Height="200" Width="300"></TextBox>
        </StackPanel>
    </Grid>
</Window>
